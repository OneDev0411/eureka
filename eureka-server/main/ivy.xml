<ivy-module version="2.0">
    <info organisation="netflix" module="discovery">
       <description> </description>
    </info>
    <configurations><include file="../../../Tools/build/ivy-configurations.xml"/></configurations>
    <publications>
        <artifact name="discovery" type="war" ext="war"/>
 	 </publications>
    <dependencies>
    	  <dependency org="com.thoughtworks.xstream" name="xstream" rev="1.3" conf="compile"/>
      <dependency org="com.netflix.archaius" name="archaius-core" rev="latest.${input.status}" conf="compile,sources"/>
       <dependency org="javax.ws.rs" name="jsr311-api" rev="1.1.1" conf="compile"/>
       <dependency org="com.netflix.servo" name="servo-core" rev="latest.${input.status}" conf="compile,sources"/>
       
         <dependency org="com.sun.jersey" name="jersey-bundle" rev="latest.${input.status}" conf="compile"/>
		<dependency org="com.sun.jersey.contribs" name="jersey-apache-client" rev="latest.${input.status}" conf="compile" /> 
        <dependency org="amazon" name="aws-java-sdk" rev="1.3.4.1" conf="compile"/>
        <dependency org="javax.servlet" name="servlet-api" rev="2.4" conf="provided"/>
	    <!-- runtime deps -->
        <dependency org="xerces" name="xercesImpl" rev="2.4.0" conf="runtime"/>
        <!-- TODO: take these three transitive deps out once we figure out why hudson isn't sucking them into the war -->
       <dependency org="asm" name="asm" rev="3.1" conf="runtime"/>
       <dependency org="javax.xml.bind" name="jaxb-api" rev="2.1" conf="runtime"/>
       <dependency org="com.sun.xml.bind" name="jaxb-impl" rev="2.1.6" conf="runtime"/>
       <dependency org="org.slf4j" name="slf4j-log4j12" rev="1.6.1" conf="compile"/>
         <dependency org="org.codehaus.jettison" name="jettison" rev="latest.${input.status}" conf="runtime" />
        <!--  test deps -->
        <dependency org="junit" name="junit-dep" rev="4.4" conf="test"/>
        
        <!-- exclusion list - remove any unnecessary transitive deps -->
        <exclude org="netflix" module="SRWrapper"/>
        <exclude org="com.oracle" />
        <exclude org="org.apache.ant" module="ant"/>
    </dependencies>
</ivy-module>
